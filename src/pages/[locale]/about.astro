};

const pageContent = content[locale];
---

<BaseLayout title={getTranslation(locale, 'about')} locale={locale}>
  <div class="container">
    <article class="about-content">
      <h1>{pageContent.title}</h1>

      <section>
        <h2>{pageContent.mission.title}</h2>
        <p>{pageContent.mission.text}</p>
      </section>

      <section>
        <h2>{pageContent.audience.title}</h2>
        <p>{pageContent.audience.text}</p>
      </section>

      <section>
        <h2>{pageContent.offer.title}</h2>
        <ul>
          {pageContent.offer.items.map((item: string) => <li>{item}</li>)}
        </ul>
      </section>

      <section>
        <h2>{pageContent.license.title}</h2>
        <p>
          {pageContent.license.text}
          <a href="https://creativecommons.org/licenses/by-nc-sa/4.0/" target="_blank" rel="noopener">
            Creative Commons BY-NC-SA 4.0
          </a>.
        </p>
      </section>
    </article>
  </div>
</BaseLayout>

<style>
  .about-content {
    max-width: 800px;
    margin: 0 auto;
    background: white;
    padding: 3rem;
    border-radius: var(--border-radius);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .about-content h1 {
    color: var(--color-primary);
    margin-bottom: 2rem;
  }

  .about-content section {
    margin-bottom: 2rem;
  }

  .about-content h2 {
    color: var(--color-text);
    font-size: 1.5rem;
    margin-bottom: 1rem;
  }

  .about-content p {
    line-height: 1.8;
    color: var(--color-text-light);
  }

  .about-content ul {
    padding-left: 2rem;
    padding-right: 2rem;
    line-height: 1.8;
    color: var(--color-text-light);
  }

  [dir="rtl"] .about-content ul {
    padding-left: 0;
    padding-right: 2rem;
  }

  .about-content li {
    margin-bottom: 0.5rem;
  }

  .about-content a {
    color: var(--color-primary);
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .about-content {
      padding: 2rem 1.5rem;
    }
  }
</style>