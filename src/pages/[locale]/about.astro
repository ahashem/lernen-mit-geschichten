---
import BaseLayout from '../../layouts/BaseLayout.astro';
import type { Locale } from '../../utils/i18n';
import { getTranslation } from '../../utils/i18n';

export async function getStaticPaths() {
  return [
    { params: { locale: 'ar' } },
    { params: { locale: 'en' } },
    { params: { locale: 'tr' } },
    { params: { locale: 'ur' } },
  ];
}

const { locale } = Astro.params as { locale: Locale };

