---
import '@styles/global.css';
import '@styles/rtl.css';
import LanguageSelector from '@components/LanguageSelector.astro';
import GTMTracking from '@components/GTMTracking.astro';
import type { Locale } from '@utils/i18n';
import { getTranslation, isRTL } from '@utils/i18n';

interface Props {
  title: string;
  description?: string;
  locale?: Locale;
  image?: string;
  type?: 'website' | 'article';
}

const { title, description, locale = 'de', image, type = 'website' } = Astro.props;
const dir = isRTL(locale) ? 'rtl' : 'ltr';
const siteName = getTranslation(locale, 'siteName');
const siteUrl = 'https://lernen-mit-geschichten.de';
const pageUrl = `${siteUrl}${Astro.url.pathname}`;
const defaultDescription = getTranslation(locale, 'tagline');
const ogDescription = description || defaultDescription;
const ogImage = image || `${siteUrl}/og-image.png`;
const pageTitle = `${title} | ${siteName}`;
const base = import.meta.env.BASE_URL.replace(/\/$/, '');

// Google Tag Manager ID from environment variable
const gtmId = import.meta.env.PUBLIC_GTM_ID;
---

<!doctype html>
<html lang={locale} dir={dir}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <GTMTracking gtmId={gtmId} />

    <!-- Primary Meta Tags -->
    <title>{pageTitle}</title>
    <meta name="title" content={pageTitle} />
    <meta name="description" content={ogDescription} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={pageUrl} />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={ogDescription} />
    <meta property="og:image" content={ogImage} />
    <meta
      property="og:locale"
      content={locale === 'de'
        ? 'de_DE'
        : locale === 'ar'
          ? 'ar_AR'
          : locale === 'tr'
            ? 'tr_TR'
            : locale === 'ur'
              ? 'ur_PK'
              : 'en_US'}
    />
    <meta property="og:site_name" content={siteName} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={pageUrl} />
    <meta property="twitter:title" content={pageTitle} />
    <meta property="twitter:description" content={ogDescription} />
    <meta property="twitter:image" content={ogImage} />

    <!-- Canonical URL -->
    <link rel="canonical" href={pageUrl} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body>
    <a href="#main-content" class="visually-hidden">Skip to main content</a>

    <header>
      <div class="container">
        <nav>
          <div class="nav-brand">
            <a href={locale === 'de' ? `${base}/` : `${base}/${locale}`}>
              <h1 class="site-title">{siteName}</h1>
              <p class="site-tagline">{getTranslation(locale, 'tagline')}</p>
            </a>
          </div>

          <div class="nav-links">
            <a href={locale === 'de' ? `${base}/` : `${base}/${locale}`}
              >{getTranslation(locale, 'home')}</a
            >
            <a href={locale === 'de' ? `${base}/about` : `${base}/${locale}/about`}
              >{getTranslation(locale, 'about')}</a
            >
          </div>

          <LanguageSelector currentLocale={locale} currentPath={Astro.url.pathname} />
        </nav>
      </div>
    </header>

    <main id="main-content">
      <slot />
    </main>

    <footer>
      <div class="container">
        <p>&copy; {new Date().getFullYear()} {siteName}</p>
        <p>
          <a
            href="https://creativecommons.org/licenses/by-nc-sa/4.0/"
            target="_blank"
            rel="noopener"
          >
            CC BY-NC-SA 4.0
          </a>
        </p>
      </div>
    </footer>

    <style>
      header {
        background: white;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        position: sticky;
        top: 0;
        z-index: 1000;
      }

      nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem 0;
        gap: 1rem;
        flex-wrap: wrap;
      }

      .nav-brand a {
        text-decoration: none;
        color: inherit;
      }

      .site-title {
        font-size: 1.5rem;
        margin: 0;
        color: var(--color-primary);
      }

      .site-tagline {
        font-size: 0.9rem;
        color: var(--color-text-light);
        margin: 0;
      }

      .nav-links {
        display: flex;
        gap: 1.5rem;
        align-items: center;
      }

      .nav-links a {
        font-weight: 500;
        color: var(--color-text);
        transition: color 0.2s;
      }

      .nav-links a:hover {
        color: var(--color-primary);
      }

      main {
        min-height: calc(100vh - 200px);
        padding: 2rem 0;
      }

      footer {
        background: var(--color-text);
        color: white;
        padding: 2rem 0;
        margin-top: 4rem;
        text-align: center;
      }

      footer p {
        margin: 0.25rem 0;
      }

      footer a {
        color: var(--color-secondary);
      }

      @media (max-width: 768px) {
        nav {
          flex-direction: column;
          align-items: stretch;
        }

        .nav-links {
          justify-content: center;
        }

        .site-title {
          font-size: 1.25rem;
        }
      }
    </style>
  </body>
</html>
